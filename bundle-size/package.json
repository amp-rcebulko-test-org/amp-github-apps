{
  "name": "amp-bundle-size-app",
  "description": "A GitHub App that adds a bundle-size check to pull requests",
  "version": "0.0.1",
  "private": true,
  "license": "Apache-2.0",
  "author": "The AMP HTML authors",
  "repository": {
    "type": "git",
    "url": "https://github.com/ampproject/amp-github-apps.git"
  },
  "engines": {
    "node": "^14.0.0"
  },
  "scripts": {
    "dev": "nodemon",
    "deploy": "gcloud --project amp-bundle-size-bot app deploy",
    "deploy-tag": "git tag 'deploy-bundle-size-'`date --utc '+%Y%m%d%H%M%S'`",
    "setup-db": "node ./setup-db.js",
    "start": "probot run ./app.js",
    "test": "jest"
  },
  "dependencies": {
    "@octokit/auth": "3.0.3",
    "@octokit/rest": "18.5.6",
    "knex": "0.20.8",
    "node-cache": "5.1.0",
    "pg": "8.6.0",
    "probot": "11.4.0",
    "sleep-promise": "9.1.0"
  },
  "devDependencies": {
    "fancy-log": "1.3.3",
    "jest": "27.0.4",
    "nock": "13.1.0",
    "nodemon": "2.0.2",
    "smee-client": "1.1.0",
    "sqlite3": "5.0.2",
    "supertest": "6.1.3"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "nodemonConfig": {
    "exec": "npm start",
    "watch": [
      ".env",
      "."
    ]
  }
}
